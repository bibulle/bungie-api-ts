{
  "compilerOptions": {
    "rootDir": "./generator",
    "outDir": "./build/",
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "module": "es2015",
    "target": "es2017",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["./generator/**/*"]
}
